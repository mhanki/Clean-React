{
  "name": "@mhanki/clean-react",
  "version": "2.0.0",
  "description": "A CLI tool to clean out boilerplate code from create-react-app",
  "author": "Meike Hankewicz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mhanki/Clean-React.git"
  },
  "keywords": [
    "javascript",
    "react",
    "create-react-app",
    "cli",
    "node",
    "tool"
  ],
  "main": "/build/index.js",
  "files": [
    "build",
    "templates"
  ],
  "bin": {
    "clean-react": "/build/index.js"
  },
  "scripts": {
    "test": "jest --config ./jest.config.json",
    "test:watch": "npm run test -- --watch",
    "test:silent": "npm run test -- --silent",
    "build": "tsc",
    "dev:watch": "tsc -w",
    "start": "npm run build && node build/index.js"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "dependencies": {
    "chalk": "^4.1.1"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.18.6",
    "@types/node": "^18.11.18",
    "typescript": "^4.9.4"
  }
}
